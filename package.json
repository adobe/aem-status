{
  "name": "@adobe/aem-status",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Status page and incident tracking for AEM Edge Delivery Services",
  "scripts": {
    "test": "node --test",
    "test:watch": "node --test --watch",
    "test:coverage": "node --test --experimental-test-coverage",
    "test:coverage:report": "node --test --experimental-test-coverage --test-reporter=lcov --test-reporter-destination=coverage.lcov",
    "lint:js": "eslint .",
    "lint:css": "stylelint 'blocks/**/*.css' 'styles/*.css'",
    "lint": "npm run lint:js && npm run lint:css",
    "update-incidents": "node scripts/update-incidents-index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adobe/aem-block-collection.git"
  },
  "author": "Adobe",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/adobe/aem-block-collection/issues"
  },
  "homepage": "https://www.aemstatus.net",
  "dependencies": {
    "jsdom": "^27.0.0"
  },
  "devDependencies": {
    "eslint": "8.57.1",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-plugin-import": "2.32.0",
    "stylelint": "16.24.0",
    "stylelint-config-standard": "39.0.0"
  }
}
